<div class="ui grid segment">
  <div class="three wide column">
    <div class="ui special cards">
      <div class="centered card">
        <div class="blurring dimmable image">
          <div class="ui dimmer">
            <div class="content">
              <div class="center">
                <div class="ui inverted button">
                  <%= form_for @user, method: :put,
                    html: {id: "avatar_form", multipart: true} do |f| %>
                    <%= f.label :avatar, t(".change_avatar") %>
                    <%= f.file_field :avatar, accept: Settings.image_type %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <%= image_tag @user.avatar.url, class: "user_avatar" %>
        </div>
        <div class="content">
          <p class="header"><%= @user.name %></p>
          <div class="meta">
            <span class="date">
              <%= t ".join_since" %> <%= @user.created_at.to_date %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="twelve wide column">
    <h3 class="header"><%= t ".your_orders_history" %></h3>
    <div class="ui top attached tabular menu">
      <a class="item active" data-tab="first"><%= t ".pending" %></a>
      <a class="item" data-tab="second"><%= t ".approved" %></a>
      <a class="item" data-tab="third"><%= t ".rejected" %></a>
      <a class="item" data-tab="fourth"><%= t ".finished" %></a>
    </div>
    <div class="ui bottom attached tab segment active" data-tab="first">
      <%= render "shared/table", user: @user, status: "pending" %>
    </div>
    <div class="ui bottom attached tab segment" data-tab="second">
      <%= render "shared/table", user: @user, status: "approved" %>
    </div>
    <div class="ui bottom attached tab segment" data-tab="third">
      <%= render "shared/table", user: @user, status: "rejected" %>
    </div>
    <div class="ui bottom attached tab segment" data-tab="fourth">
      <%= render "shared/table", user: @user, status: "finished" %>
    </div>
  </div>
</div>
<%= render "shared/recently_viewed" %>
