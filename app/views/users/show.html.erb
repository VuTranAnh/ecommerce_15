<div class="ui grid">
  <div class="three wide column">
    <div class="ui special cards">
      <div class="centered card">
        <div class="blurring dimmable image">
          <div class="ui dimmer">
            <div class="content">
              <div class="center">
                <div class="ui inverted button">
                  <%= form_for @user, method: :put,
                    html: {id: "avatar_form", multipart: true} do |f| %>
                    <%= f.label :avatar, t(".change_avatar") %>
                    <%= f.file_field :avatar, accept: Settings.image_type %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <%= image_tag @user.avatar.url, class: "user_avatar" %>
        </div>
        <div class="content">
          <p class="header"><%= @user.name %></p>
          <div class="meta">
            <span class="date">
              <%= t ".join_since" %> <%= @user.created_at.to_date %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="twelve wide column">
  </div>
</div>
