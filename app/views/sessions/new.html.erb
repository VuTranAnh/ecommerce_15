<% provide :title, t(".login") %>
<div class="ui page grid">
  <div class="eight wide column centered">
    <h2 class="ui center aligned teal header"><%= t ".login" %></h2>
    <%= form_for :session, url: login_path, html: {class: "ui large form"} do |f| %>

      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input fluid">
            <i class="mail icon"></i>
            <%= f.text_field :email, placeholder: t(".email") %>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input fluid">
            <i class="lock icon"></i>
            <%= f.password_field :password, placeholder: t(".password") %>
          </div>
        </div>

        <%= f.submit t(".login"), class: "ui fluid large teal button" %>
      </div>
    <% end %>

    <div class="ui message">
      <%= t ".haven't_had_account" %> <%= link_to t(".signup"), signup_path %>
    </div>
  </div>
</div>
